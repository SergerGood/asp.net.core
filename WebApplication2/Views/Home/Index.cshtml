@using System
@using NET.Sample.Web.Models
@model IEnumerable<Phone>
@{
    ViewData["Title"] = "Каталог товаров";
}
<h3>Смартфоны</h3>
<table class="table-condensed">
    <tr>
        <td>Модель</td>
        <td>Производитель</td>
        <td>Цена</td>
        <td></td>
    </tr>
    @foreach (Phone phone in Model)
    {
        <tr>
            <td>@phone.Name</td>
            <td>@phone.Company</td>
            <td>@phone.Price</td>
            <td>
                <a href="~/Home/Buy/@phone.Id">Купить</a>
            </td>
        </tr>
    }


</table>

<form method="post" action="~/Home/Square">
    <label>Высота:</label><br/>
    <input type="number" name="height"/><br/>
    <label>Основание:</label><br/>
    <input type="number" name="altitude"/><br/>
    <input type="submit" value="Отправить"/>
</form>